						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi3.fe_groups_admin</label>							
							<config>
								<type>select</type>						
								<maxitems>99</maxitems>
								<size>4</size>
								<minitems>0</minitems>						
								<foreign_table>fe_groups</foreign_table>
								<foreign_table_where>AND fe_groups.deleted=0 AND fe_groups.hidden=0 ORDER BY fe_groups.title ASC</foreign_table_where>																
