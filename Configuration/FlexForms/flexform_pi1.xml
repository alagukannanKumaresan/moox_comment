<T3DataStructure>
	<meta>
        <langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				 <TCEforms>
					<sheetTitle>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.foreignType>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.foreign_type</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>		
								<allowNonIdValues>1</allowNonIdValues>
								<maxitems>1</maxitems>
								<size>1</size>
								<minitems>1</minitems>												
								<itemsProcFunc>DCNGmbH\MooxComment\Hooks\FlexFormHelper->foreignType</itemsProcFunc>						
							</config>
						</TCEforms>
					</settings.foreignType>
					<settings.content>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.contents</label>
							<displayCond><![CDATA[FIELD:settings.foreignType:=:self]]></displayCond>
							<config>
								<type>inline</type>		
								<foreign_table>tt_content</foreign_table>
								<foreign_record_defaults>
									<colPos>99154</colPos>
								</foreign_record_defaults>								
								<maxitems>999</maxitems>								
							</config>
						</TCEforms>
					</settings.content>
					<settings.page>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.page</label>
							<displayCond><![CDATA[FIELD:settings.foreignType:=:pages]]></displayCond>
							<config>
								  <type>group</type>
								  <internal_type>db</internal_type>
								  <allowed>pages</allowed>
								  <size>1</size>
								  <maxitems>1</maxitems>
								  <minitems>0</minitems>								 
							</config>
						</TCEforms>
					</settings.page>
					<settings.contentElement>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.content_element</label>
							<displayCond><![CDATA[FIELD:settings.foreignType:=:tt_content]]></displayCond>
							<config>
								  <type>group</type>
								  <internal_type>db</internal_type>
								  <allowed>tt_content</allowed>
								  <size>1</size>
								  <maxitems>1</maxitems>
								  <minitems>0</minitems>								 
							</config>
						</TCEforms>
					</settings.contentElement>
					<settings.showContentElement>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.show_content_element</label>
							<displayCond><![CDATA[FIELD:settings.foreignType:=:tt_content]]></displayCond>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</settings.showContentElement>					
					<settings.storagePid>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.storage_pid</label>
							<config>
								<type>select</type>		
								<allowNonIdValues>1</allowNonIdValues>
								<maxitems>1</maxitems>
								<size>1</size>
								<minitems>1</minitems>												
								<foreign_table>pages</foreign_table>
								<foreign_table_where>AND pages.module='mxcomment' AND pages.deleted=0 AND pages.hidden=0 ORDER BY pages.title ASC</foreign_table_where>								
								<itemsProcFunc>DCNGmbH\MooxComment\Hooks\FlexFormHelper->storagePid</itemsProcFunc>						
							</config>
						</TCEforms>
					</settings.storagePid>					
					<settings.feGroupsAdmin>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.fe_groups_admin</label>							
							<config>
								<type>select</type>						
								<maxitems>99</maxitems>
								<size>4</size>
								<minitems>0</minitems>						
								<foreign_table>fe_groups</foreign_table>
								<foreign_table_where>AND fe_groups.deleted=0 AND fe_groups.hidden=0 ORDER BY fe_groups.title ASC</foreign_table_where>																
								<itemsProcFunc>DCNGmbH\MooxComment\Hooks\FlexFormHelper->feGroups</itemsProcFunc>
							</config>
						</TCEforms>
					</settings.feGroupsAdmin>
					<settings.onlyLoggedInUsersCanComment>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.only_logged_in_users_can_comment</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</settings.onlyLoggedInUsersCanComment>
					<settings.onlyLoggedInUsersCanSeeComments>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.only_logged_in_users_can_see_comments</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</settings.onlyLoggedInUsersCanSeeComments>
					<settings.usersCanDeleteOwnComments>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.users_can_delete_own_comments</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</settings.usersCanDeleteOwnComments>
					<settings.autoConfirmLoggedInUsers>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.auto_confirm_logged_in_users</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</settings.autoConfirmLoggedInUsers>
					<settings.autoConfirmPublicUsers>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.auto_confirm_public_users</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</settings.autoConfirmPublicUsers>
					<settings.nameRequired>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.name_required</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.nameRequired>
					<settings.emailRequired>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.email_required</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.emailRequired>
					<settings.titleRequired>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.title_required</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.titleRequired>
					<settings.commentRequired>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.comment_required</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.commentRequired>
					<settings.newEntryEmailTemplate>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.new_entry_email_template</label>
							<onChange>reload</onChange>							
							<config>
								<type>select</type>						
								<maxitems>1</maxitems>
								<size>1</size>
								<minitems>1</minitems>
								<itemsProcFunc>DCNGmbH\MooxComment\Hooks\FlexFormHelper->newEntryEmailTemplate</itemsProcFunc>						
							</config>
						</TCEforms>
					</settings.newEntryEmailTemplate>
					<settings.notificationsSenderName>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.notifications_sender_name</label>
							<displayCond><![CDATA[FIELD:settings.newEntryEmailTemplate:>:0]]></displayCond>							
							<config>
								<type>input</type>
								<size>30</size>
								<eval>trim</eval>
							</config>
						</TCEforms>
					</settings.notificationsSenderName>
					<settings.notificationsSenderAddress>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.notifications_sender_address</label>
							<displayCond><![CDATA[FIELD:settings.newEntryEmailTemplate:>:0]]></displayCond>												
							<config>
								<type>input</type>
								<size>30</size>
								<eval>required,trim</eval>
							</config>
						</TCEforms>
					</settings.notificationsSenderAddress>
					<settings.itemsPerPage>
						<TCEforms>
							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi1.items_per_page</label>							
							<config>
								<type>input</type> 					
								<eval>int</eval>
								<default>8</default>
								<size>5</size>
							</config>
						</TCEforms>
					</settings.itemsPerPage>
				</el>
			</ROOT>			
		</sDEF>		
	</sheets>
</T3DataStructure>