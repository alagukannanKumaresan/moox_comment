							<label>LLL:EXT:moox_comment/Resources/Private/Language/locallang_be.xlf:pi3.page</label>
							<displayCond><![CDATA[FIELD:settings.foreignType:=:pages]]></displayCond>
							<config>
								  <type>group</type>
								  <internal_type>db</internal_type>
								  <allowed>pages</allowed>
								  <size>1</size>
								  <maxitems>1</maxitems>
								  <minitems>0</minitems>								 
							</config>
						</TCEforms>
